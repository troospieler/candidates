{
  "name": "Helper для кандидатів",
  "version": "0.0.6",
  "description": "Додавайте кандидатів до Helper напряму з інтеграцій",
  "permissions": ["storage", "tabs", "cookies"],
  "host_permissions": [
    "https://www.work.ua/*",
    "https://*.rabota.ua/*",
    "https://*.robota.ua/*"
  ],
  "externally_connectable": {
    "matches": ["https://www.work.ua/*resumes/*"],
    "js": ["contentScript.js"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.work.ua/*resumes/*"],
      "js": ["contentScript.js"],
      "css": [
        "popup.css",
        "entrance.css",
        "fetching-state.css",
        "candidate-info.css",
        "success-window.css"
      ],
      "run_at": "document_start",
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/plugin-icon-main.png",
        "assets/plugin-icon-big.png",
        "utils.js",
        "popup.html",
        "candidate.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/plugin-icon-main.png",
    "24": "assets/plugin-icon-main.png",
    "32": "assets/plugin-icon-main.png",
    "48": "assets/plugin-icon-main.png",
    "128": "assets/plugin-icon-big.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/plugin-icon-main.png",
      "24": "assets/plugin-icon-main.png",
      "32": "assets/plugin-icon-main.png",
      "48": "assets/plugin-icon-main.png",
      "128": "assets/plugin-icon-big.png"
    },
    "default_title": "Helper | Кандидати"
  },
  "manifest_version": 3
}
